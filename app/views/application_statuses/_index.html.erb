<div class="modal fade" id="modal-load" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg " role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Sesiones</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body sesions-overflow">
        <table class="table table-striped table-hover table-bordered">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Nombre</th>
              <th>Descripción</th>
              <th colspan="3" class="text-center">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @application_statuses.each do |application_status| %>
              <tr>
                <td><%= application_status.created_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
                <td><%= application_status.name %></td>
                <td><%= application_status.description %></td>
                <td class="text-center"><%= link_to application_statuses_load_path(id:application_status.id), remote: true do %>  <i class="fas fa-cloud-download-alt icon-primary-colour" title="Cargar"></i> <% end %></td>
                <td class="text-center"><i class="fas fa-share-alt icon-primary-colour" title="Compartir"></i></td>
                <td class="text-center"><%= link_to application_status, method: :delete, data: { confirm: '¿Está seguro?' } do %> <i class="fas fa-trash-alt icon-primary-colour" title="Eliminar"></i> <%end%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="modal-footer">
        <%= link_to "Crear", new_application_status_path(), remote: true, :class => 'btn btn-primary' %>
      </div>

    </div>
  </div>
</div>
