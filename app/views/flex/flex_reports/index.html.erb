<p id="notice"><%= notice %></p>

<div class="card shadow">
  <div class="card-body">
    <div class="form-row">
      <div class="col-md-6">
        <h2>Reportes</h2>
      </div>
      <div class="col-md-6 text-right">
        <%= link_to 'Nuevo', new_flex_flex_report_path, :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

<div class="card shadow">
  <div class="card-body">
    <table class="table table-striped table-hover table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Usuario</th>
          <th>Filtros</th>
          <th colspan="2" class="text-center">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @flex_reports.each do |flex_report| %>
          <tr>
            <td><%= flex_report.name %></td>
            <td><%= flex_report.user %></td>
            <td><%= flex_report.filters %></td>
            <td class="text-center"><%= link_to edit_flex_flex_report_path(flex_report) do %>  <i class="fas fa-edit" title="Editar"></i> <% end %></td>
            <td class="text-center"><%= link_to flex_flex_report_path(flex_report), method: :delete, data: { confirm: '¿Está seguro?' } do %> <i class="fas fa-trash-alt " title="Eliminar"></i> <%end%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
