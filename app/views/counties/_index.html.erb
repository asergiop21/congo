<div class="modal fade" id="modal-counties" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content text-light">

      <div class="modal-header">
        <h5 class="modal-title"> Comunas </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= simple_form_for( :search, url: counties_find_path(), method: "Get", html: { remote: true}) do |f| %>

      <div class="modal-body">
        <div id="alert-success"></div>
        <p>Seleccione el nombre de la comuna:</p>
        <%= f.input :name, collection: counties_for_select(), label: false, input_html: {class:"form-control col-md-10 offset-md-1", multiple:true} %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <%= f.submit class: 'btn btn-primary', value: "Aceptar" %>
      </div>

    <% end %>
    </div>
  </div>
</div>
