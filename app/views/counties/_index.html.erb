<div class="modal fade" id="modal-counties" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Counties</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <%= simple_form_for( :search, url: counties_find_path(), method: "Get", html: { remote: true}) do |f| %>

      <div class="modal-body">
        <div id="alert-success"></div>
        <%= f.input :name, collection: counties_for_select(), :include_blank => true, input_html: {class:"form-control col-md-6"} %>
        <%= f.submit class: 'btn btn-primary', value: "Enviar" %>
      </div>

    <% end %>
    </div>
  </div>
</div>
