<!-- Log in -->

<div class="form-signin">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <center> <%=image_tag "logoinciti.png", class: "mb-4", alt:"" %> </center>
      <%= f.text_field :name, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email address" %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <center>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </center>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit class: 'btn btn-lg btn-primary btn-block', value: "Log in" %>
    </div>
  <% end %>

  <!--<%= render "users/shared/links" %>-->

</div>
