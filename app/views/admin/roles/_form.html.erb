<div class="card shadow">
  <div class="card-body">

    <%= simple_form_for([:admin, @role]) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-group row">
        <div class="col-md-2 text-right">
          <%= f.label :name, class: 'col-form-label' %>
        </div>
        <div class="col-md-3">
          <%= f.input :name, label: false, input_html: {class: 'form-control'} %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-2 text-right">
          <%= f.label :read_only, 'Solo Lectura', class: 'form-check-label' %>
        </div>
        <div class="col-md-3">
          <%= f.input :read_only, label: false, input_html: {class: 'form-check'} %>
        </div>
      </div>

      <div class="form-group row">
        <div class="offset-md-2 col-sm-5">
          <%= f.submit :submit, class: 'btn btn-primary', value: "Guardar" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
