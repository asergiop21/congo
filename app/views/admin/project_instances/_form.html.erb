<div class="card shadow">
  <div class="card-body">

    <%= simple_form_for([:admin, @project, @project_instance]) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-row">
        <div class="form-group col-md-2">
          <%= f.input :cadastre, input_html: {class: 'form-control form-control-sm'}  %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :bimester, input_html: {class: 'form-control form-control-sm'}  %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :year, input_html: {class: 'form-control form-control-sm'}  %>
        </div>
        <div class="form-group col-md-2">
          <%= f.association :project_status, input_html: {class: 'form-control form-control-sm'}  %>
        </div>
        <div class="form-group col-md-2">
          <%= f.input :comments, input_html: {class: 'form-control form-control-sm'}  %>
        </div>
        <div class="form-group col-md-1">
          <div class="form-check">
            <%= f.check_box :validated, class: 'form-check-input' %>
            <%= f.label :validated, class: 'form-check-label' %>
          </div>
        </div>
        <div class="form-group col-md-1">
          <%= f.button :submit, class: 'btn btn-primary', value: "Guardar" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
