<div class="card shadow">
  <div class="card-body">
    <%= simple_form_for([:admin, @project, @project_instance]) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-row">
        <div class="form-group col-md-3">
          <%= f.input :cadastre, input_html: {class: 'form-control'}  %>
        </div>

        <div class="form-group col-md-3">
          <%= f.input :bimester, input_html: {class: 'form-control'}  %>
        </div>
        <div class="form-group col-md-3">
          <%= f.input :year, input_html: {class: 'form-control'}  %>
        </div>
        <div class="form-group col-md-3">
          <%= f.association :project_status, input_html: {class: 'form-control'}  %>
        </div>
        <div class="form-group col-md-3">
          <%= f.input :comments, input_html: {class: 'form-control'}  %>
        </div>
        <div class="form-group col-md-3">
          <%= f.input :validated, input_html: {class: 'form-control'}  %>
        </div>
      </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
</div>
