<p id="notice"><%= notice %></p>

<h1>Admin Periods</h1>

<table>
  <thead>
    <tr>
      <th>Bimester</th>
      <th>Year</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |admin_period| %>
      <tr>
        <td><%= admin_period.bimester %></td>
        <td><%= admin_period.year %></td>
        <td><%= admin_period.active %></td>
        <td><%= link_to 'Edit', edit_admin_period_path(admin_period) %></td>
        <td><%= link_to 'Delete', admin_period_path(admin_period), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Period', new_admin_period_path %>
