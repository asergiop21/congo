<%= form_with  url: admin_transactions_generate_csv_path, method: :get, local:true do |f| %>

  <div class="clearfix">
    <label for="xlInput"><strong><%= t(:INSCRIPTION_DATE_FROM) %></strong></label>
    <div class="input">
      <%= text_field_tag :date_from %>
    </div>
    <br/>
    <label for="xlInput"><strong><%= t(:INSCRIPTION_DATE_TO) %></strong></label>
    <div class="input">
      <%= text_field_tag :date_to %>
    </div>
  </div>

  <%= submit_tag "Exportar", :class => 'btn primary' %>
  <% unless @transactions.errors.count.zero? %>
    <div>
      <p>Errores</p>
      <table>
        <tr>
          <td>fila</td>
          <td>errores</td>
        </tr>
        <% @errors.each_index do |i| %>
        <tr>
          <td><%= @erroneous_rows[i].to_s %></td>
          <td><%= @errors[i].full_messages.to_s %></td>
        </tr>
        <% end %>
      </table>
    </div>
  <% end %> 
<% end %>
