<div class="card shadow">
  <div class="card-body">

    <%= simple_form_for([:admin, @uf_conversion]) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-group row">
        <div class="col-md-3 offset-md-2">
          <%= f.input :file, as: :file, label: false, input_html: {class: 'filestyle', 'data-text': 'Seleccionar archivo', 'data-btnClass': 'btn-primary', 'data-size': 'sm', 'data-buttonBefore': 'true'} %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-5 text-right">
          <%= link_to 'Cancelar', admin_uf_conversions_path, :class => 'btn btn-secondary' %>
          <%= f.button :submit, class: 'btn btn-primary', value: "Guardar" %>
        </div>
      </div>

    <% end %>

  </div>
</div>
