<p id="notice"><%= notice %></p>

<div class="card shadow">
  <div class="card-body pb-1">
    <div class="form-row">
      <div class="col-md-2">
        <h2>Proyectos</h2>
      </div>
      <div class="col-md-8 text-center">
        <%= render partial: 'search' %>
      </div>
      <div class="col-md-2 text-right">
        <%= link_to 'Nuevo', new_admin_project_path, :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<% if @projects.present? %>
  <div class="card shadow">
    <div class="card-body">
      <%= will_paginate @projects %>
      <table class="table table-striped table-hover table-bordered">

        <thead>
          <tr>
            <th>Codigo</th>
            <th>Bimestre</th>
            <th>AÃ±o</th>
            <th>Nombre</th>
            <th>Comuna</th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <% project.project_instances.each do |pi| %>
              <tr>
                <td><%= project.code %></td>

                <td><%= pi.bimester %></td>
                <td><%= pi.year %></td>

                <td><%= link_to project.name, edit_admin_project_path(project.id) %></td>
                <td><%= project.county.name %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
