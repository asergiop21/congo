<%= form_tag admin_projects_path, :method => :get do %>
  <div class="form-row">
    <div class="form-group col-md-2">
      <%=text_field_tag :search, '', class: 'form-control', placeholder: '' %>
    </div>
    <div class="form-group col-md-2">
      <%= select_tag 'county_id', options_for_select(counties_for_select), {include_blank: 'Comuna', class: 'form-control'} %>
    </div>
    <div class="form-group col-md-2">
      <%= select_tag 'project_type_id', options_for_select({ "CASAS"=> "1", "DEPARTAMENTOS" => "2"}), {include_blank: 'Tipo', class: 'form-control'} %>
    </div>
    <div class="form-group col-md-2">
      <%= select_tag 'bimester_id', options_for_select((1..6).to_a), {include_blank: 'Bimestre', class: 'form-control'} %>
    </div>
    <div class="form-group col-md-2">
      <%= select_tag 'date_id', options_for_select((2010..Date.today.year).to_a), {include_blank: 'AÃ±o', class: 'form-control'} %>
    </div>
    <div class="form-group col-md-1">
      <%= submit_tag "Filtrar" , :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
